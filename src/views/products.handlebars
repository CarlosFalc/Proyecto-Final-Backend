<h2>Página de productos</h2>
<br/>
{{#if totalDocs}}
    <div>
        Listado de productos:
        <ul>
        {{#each payload}}
            <li>{{this.title}} - Precio: {{this.price}}</li>
            <button onclick="addToCart(`{{this._id}}`)">Agregar al carrito</button>
            <hr>
        {{/each}}
        </ul>
    </div>
    <div>
        {{#if hasPrevPage}}
            <a href={{prevLink}}>Página Anterior</a>
        {{/if}}

        {{page}}

        {{#if hasNextPage}}
            <a href={{nextLink}}>PáginaSiguiente</a>
        {{/if}}
    </div>
{{else}}
    <p>No hay productos</p>
{{/if}}

<script src="/js/products.js"></script>